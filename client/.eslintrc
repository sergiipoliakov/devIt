{
    "extends": [
        "eslint:recommended",
		"plugin:react/recommended",
		"plugin:@typescript-eslint/recommended",
        "airbnb"
	],

    "parser": "@typescript-eslint/parser",

    "parserOptions": {
		"ecmaVersion": 7,
        "sourceType": "module",
        "allowImportExportEverywhere": true,
		"ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
	},
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },

    "rules": {
        "@typescript-eslint/explicit-module-boundary-types": "off",
        "no-shadow": 0,
		"consistent-this": 0,
		"no-bitwise": 0,
		"no-useless-catch": 0,
		"class-methods-use-this": 0,
		"no-dynamic-require": 0,
        "quote-props": 0,
        "global-require": 0,
        "react/no-danger": 0,
        "react/jsx-fragments": 0,
        "no-nested-ternary": 0,
        "react/jsx-one-expression-per-line": 0,
        "react/jsx-props-no-spreading": 0,
        "radix": ["error", "as-needed"],
        "no-prototype-builtins": 0,
        "no-trailing-spaces": 0,
        "no-extend-native": ["error", { "exceptions": ["String", "Object"] }],
        "no-param-reassign": 0,
        "jsx-quotes": 1,
        "operator-linebreak": [1, "after", { "overrides": { "?": "ignore", ":": "ignore" } }],
		"react/jsx-uses-react": 1,
        "react/jsx-indent": [0, 4],
        "indent": [0, 4],
        "react/jsx-first-prop-new-line": [1, "multiline-multiprop"],
        "react/jsx-uses-vars": 1,
        "react/static-property-placement": 0,
        "react/jsx-indent-props": 0,
        "react/no-did-update-set-state": 0,
        "arrow-body-style": 0,
        "react/react-in-jsx-scope": 1,
        "react/prefer-stateless-function": 0,
		"comma-dangle": [1, "never"],
		"@typescript-eslint/no-explicit-any": 0,
		"@typescript-eslint/ban-ts-comment": 0,
        "no-use-before-define": "off",
        "@typescript-eslint/no-use-before-define": ["error", { "functions": false }],
        "import/prefer-default-export": 0,
		"no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": 2,
        "padded-blocks": [1, "never"],
        "import/extensions": [2, "always", {
			"js": "never",
			"jsx": "never",
			"ts": "never",
			"tsx": "never"
		}],
        "no-tabs": 0,
        "one-var": 0,
        "no-case-declarations": 0,
        "no-underscore-dangle": 0,
        "no-undef": 0,
        "no-control-regex": 0,
        "no-useless-escape": 0,
        "no-plusplus": 0,
        "no-unused-expressions": 0,
        "no-else-return": 0,
        "consistent-return": [1, { "treatUndefinedAsUnspecified": false }],
        "jsx-a11y/label-has-associated-control": [1, { "assert": "either" } ],
        "jsx-a11y/click-events-have-key-events" : 0,
        "jsx-a11y/label-has-for": 0,
        "max-len": [1, { "code": 300, "ignoreRegExpLiterals": true, "ignoreTemplateLiterals": true, "ignoreStrings": true }],
		"guard-for-in": 0,
        "no-restricted-syntax": [1, "WithStatement", "BinaryExpression[operator='in']"],
        "no-continue": 0,
        "no-return-assign": 0,
        "no-restricted-globals": 0,
        "react/jsx-no-bind": [1, {
            "ignoreDOMComponents": false,
            "ignoreRefs": false,
            "allowArrowFunctions": true,
            "allowFunctions": true,
            "allowBind": true
		}],
		"jsx-a11y/control-has-associated-label": 0,
        "no-console": 0,
		"no-mixed-spaces-and-tabs": 0,
		"no-throw-literal": 0,
		"react/no-unused-prop-types": 1,
		"no-useless-computed-key": 1,
		"object-curly-newline": 1,
		"keyword-spacing": 1,
        "react/button-has-type": 0,
		"react/jsx-closing-tag-location": 1,
		"no-multiple-empty-lines": 1,
		"semi": 2,
		"react/no-array-index-key": 0,
		"no-alert": 1,
		"valid-typeof": 0,
		"react/jsx-filename-extension": [1, { "extensions": [".ts", ".tsx"] }],
		"@typescript-eslint/rule-name": 0,
		"camelcase": 0,
		"@typescript-eslint/no-var-requires": 0,
		"import/no-dynamic-require": 0,
        "import/no-unresolved": 0
    },
    "plugins": [
        "react",
        "jsx",
		"import",
		"jsx-a11y",
		"@typescript-eslint"
    ],

    "settings": {
        "react": {
			"pragma": "React",
            "version": "detect"
		},
		"import/resolver": {
			"typescript": {}
		}
    }
}
